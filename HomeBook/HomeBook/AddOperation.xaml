<Window x:Class="HomeBook.AddOperation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBook"
        mc:Ignorable="d"
        Title="Add Operation" Height="500" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF150D0D" Offset="0"/>
                <GradientStop Color="#FFFFA2A2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="225" Margin="89,42,0,0" Height="25"/>
        <TextBox x:Name="tbOperationName" HorizontalAlignment="Left" Height="85" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" Margin="89,113,0,0" FontFamily="Cooper Black"/>
        <Label x:Name="label" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,80,0,0" Foreground="#FFE0B030" FontSize="16" FontFamily="Cooper Black"/>
        <Label x:Name="label1" Content="Type" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,10,0,0" FontFamily="Cooper Black" FontSize="16" Foreground="#FFE0B030"/>
        <DatePicker HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,220,0,0" Height="23" Width="225" FirstDayOfWeek="Monday" SelectedDateFormat="Short"/>
        <Label x:Name="label2" Content="Select a product" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,260,0,0" Foreground="#FFE0B030" FontFamily="Cooper Black" FontSize="16"/>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="225" Margin="89,293,0,0"/>
        <Label x:Name="label3" Content="Or add new" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="89,323,0,0" Foreground="#FFE0B030" FontFamily="Cooper Black" FontSize="16"/>
        <Button x:Name="button" Content="Add product" HorizontalAlignment="Left" VerticalAlignment="Top" Width="102" Margin="212,327,0,0" Foreground="#FFE0B030" FontFamily="Cooper Black" FontSize="13.333"/>
        <TextBox x:Name="tbSum" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="225" Margin="89,369,0,0" FontFamily="Cooper Black" FontWeight="Bold"/>
    </Grid>
</Window>
