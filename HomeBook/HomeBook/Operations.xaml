<Window x:Class="HomeBook.Operations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBook"
        mc:Ignorable="d"
        Title="Operations" Height="500" Width="1000">
    <Grid Margin="0,0,2,-2" RenderTransformOrigin="0.544,0.368">
        <DataGrid x:Name="dgOperagions" AutoGenerateColumns="False" Margin="0,27,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding OperationTypeModel.Name}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="220"></DataGridTextColumn>
                <DataGridComboBoxColumn Header="Products" ItemsSource="{Binding Source=OperationProducts}" SelectedValueBinding="{Binding OperationProducts}" DisplayMemberPath="Name" Width="220"></DataGridComboBoxColumn>
                <DataGridTextColumn Header="Sum" Binding="{Binding Sum}" Width="150"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnAddOperation" Content="Add new operation" HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" Height="27" FontFamily="Cooper Black" FontSize="16" Foreground="#FFE0B030" Click="btnAddOperation_Click"/>

    </Grid>
</Window>
