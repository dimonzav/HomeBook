<Window x:Class="HomeBook.Operations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeBook"
        mc:Ignorable="d"
        Title="Operations" Height="500" Width="1000">
    <Grid Margin="0,0,2,-2">
        <DockPanel HorizontalAlignment="Left" Height="472" LastChildFill="False" VerticalAlignment="Top" Width="990">
            <DataGrid x:Name="dgOperagions" Height="472" VerticalAlignment="Top" DockPanel.Dock="Top" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Type" Binding="{Binding OperationType.Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"></DataGridTextColumn>
                </DataGrid.Columns>   
            </DataGrid>
        </DockPanel>

    </Grid>
</Window>
